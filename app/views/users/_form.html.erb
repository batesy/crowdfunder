<%= form_for @user, :html => {:multipart => true} do |f| %>
<div class="field">
  <%= f.label :username, "Name" %><br />
  <%= f.text_field :username %>
</div>
<div class="field">
  <%= f.label :email %><br />
  <%= f.email_field :email %>
</div>

<div class="field">
  <%= f.label :image %><br />
  <%= f.file_field :image %>
</div>

<div class="field">
   <%= f.label :password %><br />
   <%= f.password_field :password %>
</div>
<div class="field">
   <%= f.label :password_confirmation %><br />
   <%= f.password_field :password_confirmation %>
</div>
<div class="actions">
  <%= f.submit %>
</div>
<% end %>