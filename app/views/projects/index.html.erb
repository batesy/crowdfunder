<div class="row">
  <div class="large-12 columns">
    <div id="header">
      <h1>Fund one of these super sweet projects</h1>
    </div>
    <% @projects.each do |project| %>
    <div class="large-4 columns">
      <!-- <img src="http://placehold.it/1000x1000&text=Thumbnail"> -->
      <%= image_tag project.image_url(:thumb) %>
      <div class="panel">
        <h5><%= link_to project.title, "/projects/#{project.id}" %></h5>
        <h6 class="subheader">Pledged: $<%= project.pledged %></h6>
        <h6 class="subheader"><%= project.percent_to_goal %>% funded</h6>
        <div class="progress">
          <span class="meter" style="width: <%= project.meter %>%"></span>
        </div>
      </div>
    </div>
    <% end %>
    

  </div>
</div>